#!/usr/bin/env python
import subprocess
import typer

app = typer.Typer(no_args_is_help=True)


def sh(command: str) -> None:
    subprocess.run(command, shell=True, check=True)


def cleanup_pypi_build():
    sh("rm -rf dist")


@app.command("status")
def build_pypi():
    sh("poetry build")


@app.command("run")
def publish_pypi():
    sh("poetry publish")
    cleanup_pypi_build()


if __name__ == "__main__":
    app()
